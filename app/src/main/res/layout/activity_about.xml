<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F9F9F9"
    tools:context=".About">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About App"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="#333333"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    <!-- Gambar -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/fotoabout"
        android:contentDescription="About Image"/>

    <!-- Nama Pengembang -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="NUR AISYAH ASWARI"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#555555"/>

    <!-- Posisi Pengembang -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pengembang"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#777777"
        android:layout_marginBottom="20dp"/>

    <!-- CardView untuk Deskripsi Aplikasi -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#E9C1D9"
        android:elevation="6dp"
        android:radius="12dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="monospace"
            android:padding="16dp"
            android:text="Aplikasi ini dirancang untuk membantu pengguna melihat film-film yang sedang trending di Indonesia. Dengan antarmuka yang sederhana dan mudah digunakan, pengguna dapat mengeksplorasi berbagai film yang sedang populer, termasuk deskripsi singkat, rating, dan detail lainnya. Aplikasi ini memudahkan pengguna untuk menemukan film-film yang sedang ramai dibicarakan di kalangan penonton Indonesia."
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
